<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="movieTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="ratingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="genreCreatorAuthor">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/genreSize</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="whiteText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/genreSize</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

</resources>